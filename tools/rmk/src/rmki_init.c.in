#include "hydra_base.h"
#include "rmki.h"
#include "rmku.h"

/* initialize to avoid common symbols */
struct HYDT_rmki_fns HYDT_rmki_fns = { 0 };

const char *HYDT_rmki_comp_array[] = { @hydra_rmk_name_array@ };
HYD_status(*HYDT_rmki_comp_init[])(void) = { @hydra_rmk_init_array@ };

HYD_status HYDT_rmki_init(char *user_rmk)
{
    int i;
    char *rmk = NULL;
    HYD_status status = HYD_SUCCESS;

    HYDU_FUNC_ENTER();

    HYDT_rmki_fns.query_node_list = NULL;

    if (user_rmk)
        rmk = user_rmk;
    else {
        HYD_GET_ENV_STR_VAL(rmk, "HYDRA_RMK", HYDRA_DEFAULT_RMK);
        HYD_CONVERT_FALSE_TO_NULL(rmk);
    }

    if (rmk == NULL) {
        /* no RMK is provided; use the utility functionality */
        HYDT_rmki_fns.query_node_list = HYD_rmku_query_node_list;
        goto fn_exit;
    }

    for (i = 0; HYDT_rmki_comp_array[i]; i++) {
        if (!strcmp(rmk, HYDT_rmki_comp_array[i])) {
            status = (*HYDT_rmki_comp_init[i])();
            HYDU_ERR_POP(status, "RMK device returned error initializing\n");
            break;
        }
    }

    if (HYDT_rmki_comp_array[i] == NULL)
        HYDU_ERR_SETANDJUMP1(status, HYD_INTERNAL_ERROR,
                             "unrecognized resource management kernel: %s\n", rmk);

    if (HYDT_rmki_fns.query_node_list == NULL)
        HYDT_rmki_fns.query_node_list = HYD_rmku_query_node_list;

  fn_exit:
    HYDU_FUNC_EXIT();
    return status;

  fn_fail:
    goto fn_exit;
}
